<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abedeid.the_movie_app.details_fr">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#4676f8"
                        android:padding="0dp"
                        android:text="movieTitle"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/arrow_down_float" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/ReleasedTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:text="2016"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/Time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:text="100 min"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/VoteAverage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:text="1.2 avrage"
                                android:textSize="15sp" />

                            <Button
                                android:id="@+id/favourite_Btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#4c7bf8"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="make as favourite"
                                android:onClick="favourite"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/Overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="over View"
                        android:textSize="15dp" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="30dp"
                    android:text="trailers : "
                    android:textColor="#4680f9" />







            </LinearLayout>


        </ScrollView>




</FrameLayout>
